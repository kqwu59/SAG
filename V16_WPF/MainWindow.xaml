<Window x:Class="NettoieXLSX.V16.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nettoie XLSX — V16 (WPF)"
        Width="1100"
        Height="760"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource SectionCard}" Padding="18">
            <StackPanel>
                <TextBlock FontSize="20" FontWeight="SemiBold" Text="✨ Nettoie XLSX — Consolidation SAG" />
                <TextBlock Foreground="{StaticResource MutedText}"
                           Text="Importez vos fichiers sources, lancez le traitement et obtenez un export consolidé avec l’onglet Global." />
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource SectionCard}" Margin="0,16,0,0">
            <StackPanel>
                <TextBlock FontWeight="SemiBold" Text="Fichiers sources" Margin="0,0,0,8" />
                <Grid Margin="0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="140" />
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" Text="Commandes (.xlsx)" />
                    <TextBox Grid.Column="1" Margin="8,0" />
                    <Button Grid.Column="2" Content="Parcourir…" />
                </Grid>
                <Grid Margin="0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="140" />
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" Text="Constatations (.xlsx)" />
                    <TextBox Grid.Column="1" Margin="8,0" />
                    <Button Grid.Column="2" Content="Parcourir…" />
                </Grid>
                <Grid Margin="0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="140" />
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" Text="Factures (.xlsx)" />
                    <TextBox Grid.Column="1" Margin="8,0" />
                    <Button Grid.Column="2" Content="Parcourir…" />
                </Grid>
                <Grid Margin="0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="140" />
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" Text="Envoi BDC (.xlsx)" />
                    <TextBox Grid.Column="1" Margin="8,0" />
                    <Button Grid.Column="2" Content="Parcourir…" />
                </Grid>
                <Grid Margin="0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="140" />
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" Text="Workflow (.xlsx)" />
                    <TextBox Grid.Column="1" Margin="8,0" />
                    <Button Grid.Column="2" Content="Parcourir…" />
                </Grid>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Style="{StaticResource SectionCard}" Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="140" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock VerticalAlignment="Center" FontWeight="SemiBold" Text="Fichier de sortie (.xlsx)" />
                <TextBox Grid.Column="1" Margin="8,0" />
                <Button Grid.Column="2" Content="Parcourir…" />
                <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource PrimaryButton}" Content="Lancer le traitement" />
                    <Button Content="Vider les champs" Margin="8,0,0,0" />
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="3" Style="{StaticResource SectionCard}" Margin="0,16,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock FontWeight="SemiBold" Text="Journal" />
                <TextBox Grid.Row="1"
                         Margin="0,8,0,0"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         IsReadOnly="True"
                         Background="White"
                         BorderBrush="#D5E7FB"
                         BorderThickness="1"
                         Text="La présente macro permet d’avoir une vision globale du traitement des commandes de la base 0018." />
            </Grid>
        </Border>

        <Border Grid.Row="4" Style="{StaticResource SectionCard}" Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Prêt" />
                <TextBlock Grid.Column="1" Foreground="{StaticResource MutedText}" Text="V16 (WPF)" />
            </Grid>
        </Border>
    </Grid>
</Window>
