<Window x:Class="NettoieXLSX.V16.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nettoie XLSX — V16 (WPF)"
        Width="1100"
        Height="760"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <SolidColorBrush x:Key="WindowBackground" Color="#EEF6FF" />
        <SolidColorBrush x:Key="CardBackground" Color="#F7FBFF" />
        <SolidColorBrush x:Key="CardBorder" Color="#C6DCF5" />
        <SolidColorBrush x:Key="Accent" Color="#2A7DD1" />
        <SolidColorBrush x:Key="MutedText" Color="#4E5D6C" />

        <Style TargetType="Window">
            <Setter Property="Background" Value="{StaticResource WindowBackground}" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="13" />
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#1F4A7C" />
        </Style>

        <Style x:Key="SectionCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}" />
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="14" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="14,6" />
            <Setter Property="Margin" Value="0,0,8,0" />
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}" />
            <Setter Property="Background" Value="#FFFFFF" />
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{StaticResource Accent}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="{StaticResource Accent}" />
        </Style>
    </Window.Resources>
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource SectionCard}" Padding="18">
            <StackPanel>
                <TextBlock FontSize="20" FontWeight="SemiBold" Text="✨ Nettoie XLSX — Consolidation SAG" />
                <TextBlock Foreground="{StaticResource MutedText}"
                           Text="Importez vos fichiers sources, lancez le traitement et obtenez un export consolidé avec l’onglet Global." />
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource SectionCard}" Margin="0,16,0,0">
            <StackPanel>
                <TextBlock FontWeight="SemiBold" Text="Fichiers sources" Margin="0,0,0,8" />
                <Grid Margin="0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="140" />
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" Text="Commandes (.xlsx)" />
                    <TextBox x:Name="CommandesTextBox"
                             Grid.Column="1"
                             Margin="8,0"
                             AllowDrop="True" />
                    <Button x:Name="BrowseCommandesButton" Grid.Column="2" Content="Parcourir…" />
                             AllowDrop="True"
                             PreviewDragOver="OnFileDragOver"
                             Drop="OnFileDrop" />
                    <Button Grid.Column="2" Content="Parcourir…" Click="OnBrowseCommandes" />
                </Grid>
                <Grid Margin="0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="140" />
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" Text="Constatations (.xlsx)" />
                    <TextBox x:Name="ConstatationsTextBox"
                             Grid.Column="1"
                             Margin="8,0"
                             AllowDrop="True"
                             PreviewDragOver="OnFileDragOver"
                             Drop="OnFileDrop" />
                    <Button Grid.Column="2" Content="Parcourir…" Click="OnBrowseConstatations" />
                </Grid>
                <Grid Margin="0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="140" />
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" Text="Factures (.xlsx)" />
                    <TextBox x:Name="FacturesTextBox"
                             Grid.Column="1"
                             Margin="8,0"
                             AllowDrop="True"
                             PreviewDragOver="OnFileDragOver"
                             Drop="OnFileDrop" />
                    <Button Grid.Column="2" Content="Parcourir…" Click="OnBrowseFactures" />
                </Grid>
                <Grid Margin="0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="140" />
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" Text="Envoi BDC (.xlsx)" />
                    <TextBox x:Name="EnvoiBdcTextBox"
                             Grid.Column="1"
                             Margin="8,0"
                             AllowDrop="True"
                             PreviewDragOver="OnFileDragOver"
                             Drop="OnFileDrop" />
                    <Button Grid.Column="2" Content="Parcourir…" Click="OnBrowseEnvoiBdc" />
                </Grid>
                <Grid Margin="0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="140" />
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" Text="Workflow (.xlsx)" />
                    <TextBox x:Name="WorkflowTextBox"
                             Grid.Column="1"
                             Margin="8,0"
                             AllowDrop="True"
                             PreviewDragOver="OnFileDragOver"
                             Drop="OnFileDrop" />
                    <Button Grid.Column="2" Content="Parcourir…" Click="OnBrowseWorkflow" />
                </Grid>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Style="{StaticResource SectionCard}" Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="140" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock VerticalAlignment="Center" FontWeight="SemiBold" Text="Fichier de sortie (.xlsx)" />
                <TextBox x:Name="OutputTextBox" Grid.Column="1" Margin="8,0" />
                <Button Grid.Column="2" Content="Parcourir…" Click="OnBrowseOutput" />
                <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource PrimaryButton}" Content="Lancer le traitement" />
                    <Button Content="Vider les champs" Margin="8,0,0,0" />
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="3" Style="{StaticResource SectionCard}" Margin="0,16,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock FontWeight="SemiBold" Text="Journal" />
                <TextBox Grid.Row="1"
                         Margin="0,8,0,0"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         IsReadOnly="True"
                         Background="White"
                         BorderBrush="#D5E7FB"
                         BorderThickness="1"
                         Text="La présente macro permet d’avoir une vision globale du traitement des commandes de la base 0018." />
            </Grid>
        </Border>

        <Border Grid.Row="4" Style="{StaticResource SectionCard}" Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Prêt" />
                <TextBlock Grid.Column="1" Foreground="{StaticResource MutedText}" Text="V16 (WPF)" />
            </Grid>
        </Border>
    </Grid>
</Window>
